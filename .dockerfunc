  --name mysql57 \
  -v ${HOME}/appdata/.mysql:/var/lib/mysql \
  -e MYSQL_ROOT_PASSWORD="r@nD0m7772" \
  --restart always \
  -d \
  mysql:5.7 \
  $@
}

