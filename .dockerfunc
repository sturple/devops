composer() {
  docker run \
  --rm \
  -u $(id -u):$(id -g) \
  -v $(pwd):/app \
  -v ${HOME}/appdata/.composer:/${COMPOSER_HOME}/cache \
  composer/composer \
  $@
}
_yarn() {
  docker run \
  --rm \
  -u "node" \
  -w "/home/node/app" \
  -v "$(pwd):/home/node/app" \
  node yarn \
  $@
}
_node() {
  docker run \
  --rm \
  -u "node" \
  -w "/home/node/app" \
  -v "$(pwd):/home/node/app" \
  node node \
  $@
}

_npm() {
