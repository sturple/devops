rev_proxy() {
  local port = ${1:-80}
  docker run \
  --name rev_proxy \
  -d \
  -p $port:80 \
  -v /var/run/docker.sock:/tmp/docker.sock:ro  \
  -e DEFAULT_HOST=local.test \
  -restart always \
  jwilder/nginx-proxy \
  $@
}
